<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73a9c2"
    tools:context="com.example.mypc.firstskool.ChallengeFragmentSubject">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Physics"
        android:id="@+id/challenge_fragment_subject"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/challenge_fragment_subject"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/challenge_fragment_subject_recyclerview">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
